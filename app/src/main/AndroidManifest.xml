<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xj.images">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.SET_WALLPAPER"></uses-permission>
    <application
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@drawable/changing"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".ImageApp"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.xj.images.glide.ImageGlideModule" android:value="GlideModule"></meta-data>
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DisplayImageActivity"></activity>
    </application>

</manifest>